    alias fd_hidden='fd --hidden'
    alias fd_no_ignore='fd --no-ignore'
    alias fd_all='fd --hidden --no-ignore'
fi

# Additional ripgrep aliases for specific use cases
if command -v rg &> /dev/null; then
    alias rg_hidden='rg --hidden'
    alias rg_all='rg --hidden --no-ignore'
    alias rg_files='rg --files'
