# Centralized Alias Management
# Single source of truth for all shell aliases

# Convenience terminal aliases
alias c='clear'

# Safety aliases - require confirmation for destructive operations
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'
alias ln='ln -i'

# Enhanced listing commands with eza (ls-compatible, safe to alias)
# eza is designed as a drop-in ls replacement with compatible flags
if command -v eza &> /dev/null; then
    alias ls='eza --icons'
    alias ll='eza -la --icons --git --header --group-directories-first'
    alias la='eza -la --icons --git --header --group-directories-first'
    alias l='eza -l --icons --git --header --group-directories-first'
else
    alias ls='ls -G'  # Fallback to original with colors
    alias ll='ls -la'
    alias la='ls -A'
    alias l='ls -CF'
fi

# NOTE: We intentionally DO NOT alias these commands to modern replacements:
#   cat -> bat    (different paging behavior, breaks scripts)
#   find -> fd    (completely different syntax)
#   grep -> rg    (different flags, breaks scripts)
#   du -> dust    (different output format)
#   ps -> procs   (different flags and output)
#   top -> btm    (completely different tool)
#   cd -> z       (requires shell integration, breaks non-interactive shells)
#
# Instead, use the modern tools directly: bat, fd, rg, dust, procs, btm, z
# The terminal tips system will help you learn these tools!

# Keep grep colorized
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# Directory navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# Shortcuts for modern tools (explicit, not replacing core commands)
alias tree='eza --tree'
alias preview='bat'

# Modern tool convenience aliases (use these instead of hijacking core commands)
if command -v procs &> /dev/null; then
    alias myps='command ps -f -u $USER'  # Legacy ps for specific use case
fi

